<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--Invisile  -->
    <record id="new_product_hide_fields" model="ir.ui.view">
        <field name="name">Hide Product Fields</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view" />
        <field name="arch" type="xml">
            <field name="detailed_type" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
            <field name="list_price" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
            <field name="default_code" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
            <field name="product_tag_ids" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
            <field name="categ_id" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
            <field name="product_tooltip" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>

            <field name="description" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>

            <xpath expr="//group[normalize-space(text())='Internal Notes']" position="inside">
                <field name="description" invisible="1"/>
            </xpath>

        </field>
    </record>


    <record id="view_tree_product_extend" model="ir.ui.view">
        <field name="name">Product image</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='image_1920']" position="after">
                <field name="image_1920" string=" Image 1" widget="image" class="oe_avatar" options="{'preview_image': 'image_128'}"/>
                <field name="image_1920" string=" Image 2" widget="image" class="oe_avatar" options="{'preview_image': 'image_128'}"/>
            </xpath>
        </field>
    </record>

</odoo>
