<odoo>
    <!-- List View -->
    <record id="view_chamcong_list" model="ir.ui.view">
        <field name="name">chamcong</field>
        <field name="model">chamcong</field>
        <field name="arch" type="xml">
            <tree >
               
                <field name="user" width="150"/>
                <field name="product" width="150"/>
                <field name="quantity" width="150"/>
                <field name="datetime" width="150"/>
            </tree>
        </field>
    </record>

    <record id="view_form_timekeeping" model="ir.ui.view">
        <field name="name">Timekeeping</field>
        <field name="model">chamcong</field>
        <field name="arch" type="xml">
            <form>
                 <header>
                    <button name="show_tree_view" string="ADD MORE" type='object' class="oe_highlight" context='{"create": True, "type": "ir.actions.act_window", "view_mode": "tree", "res_model": "chamcong", "target": "current"}'/>
                </header>
            </form>

            <form>
                <sheet>
                    <!-- Content goes here -->
                    <group name="group_top">
                        <group name="group_left">
                            <field name="user" />
                            <field name="product" />
                        </group>
                        <group name="group_right">
                            <field name="quantity" />
                            <field name="datetime" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>


